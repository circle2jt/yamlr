{
  "name": "ymlr",
  "version": "0.0.1-alpha.1",
  "description": "A platform helps to do everythings base on a yaml script file",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "bin": {
    "ymlr": "bin/cli.js"
  },
  "files": [
    "src"
  ],
  "preferGlobal": true,
  "devDependencies": {
    "@types/jest": "^29.2.1",
    "@types/koa": "^2.13.5",
    "@types/lodash.clonedeep": "^4.5.7",
    "@types/lodash.merge": "^4.6.7",
    "@types/node": "^18.11.9",
    "@types/prompts": "^2.4.1",
    "@types/spinnies": "^0.5.0",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-standard-with-typescript": "^24.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.3.1",
    "jest-mock-server": "^0.1.0",
    "koa": "^2.14.1",
    "koa-body": "^6.0.1",
    "nodemon": "^2.0.20",
    "release-it": "^15.6.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build:pre": "pnpm clean",
    "build": "pnpm build:pre && tsc --project tsconfig.build.json && pnpm build:post",
    "build:post": "node bin/tsconfig && cp package.json ./dist/ && cp src/package.json ./dist/src/ && cp README.md ./dist/",
    "doc": "pnpm start ./scripts/doc.yaml",
    "start": "node --require ts-node/register src/index.ts",
    "d:start": "nodemon --require ts-node/register --inspect-brk src/index.ts",
    "d:test": "node --trace-warnings --expose-gc --inspect node_modules/jest/bin/jest --config=.jest/dev.config.js --runInBand",
    "test:pre": "pnpm lint && pnpm build",
    "test": "pnpm test:pre && pnpm jest --config=.jest/config.js && pnpm test:post",
    "test:post": "pnpm clean",
    "lint": "eslint --ext .ts ./src",
    "publish:npm": "pnpm build && pnpm publish --no-git-checks"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/circle2jt/ymlr.git"
  },
  "keywords": [
    "runner",
    "yaml runner",
    "cli"
  ],
  "author": "circle2jt@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/circle2jt/ymlr/issues"
  },
  "homepage": "https://github.com/circle2jt/ymlr#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.4.1",
    "lodash.clonedeep": "^4.5.0",
    "lodash.merge": "^4.6.2",
    "prompts": "^2.4.2",
    "spinnies": "^0.5.1",
    "yaml": "^2.1.3"
  },
  "publishConfig": {
    "directory": "dist",
    "access": "public",
    "tag": "alpha"
  }
}